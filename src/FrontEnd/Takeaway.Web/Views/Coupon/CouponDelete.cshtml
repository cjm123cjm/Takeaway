@model CouponDto

<form asp-action="CouponDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">删除优惠卷</h1>

        <hr />

        <div class="row">
            @Html.ValidationMessage("Coupon",new{@class="text-danger"})
            <input asp-for="CouponId" class="form-control" type="hidden" />
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="CouponCode">
                    优惠代码
                </label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CouponCode" class="form-control" />
                <span asp-validation-for="CouponCode" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="DiscountAmount">
                    优惠金额
                </label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DiscountAmount" class="form-control" />
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="MinAmount">
                    最低数量
                </label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MinAmount" class="form-control" />
                <span asp-validation-for="MinAmount" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-action="CouponIndex">返回列表</a>
            </div>
            <div class="col-5">
                <input type="submit" value="删除" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>
